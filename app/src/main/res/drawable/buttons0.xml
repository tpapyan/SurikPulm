<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#fc2c03" />
            <stroke
                android:width="1dp"
                android:color="#bf2000" />
            <corners
                android:radius="3dp" />

        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#fc2c03"
                android:endColor="#bf2000"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#bf2000" />
            <corners
                android:radius="4dp" />

        </shape>
    </item>
</selector>